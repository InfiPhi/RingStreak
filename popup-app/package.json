{
  "name": "ringstreak-popup",
  "version": "0.1.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"tsc -w\" \"electron .\"",
    "build": "tsc -p tsconfig.json",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.9.1",
    "concurrently": "^8.2.2",
    "electron": "^38.6.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^9.0.2",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.ringstreak.popup",
    "productName": "RingStreak",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "ui.html",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "asar": true
  }
}
